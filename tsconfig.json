{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": false,
        "jsx": "react",
        "isolatedModules": false,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@components/*": [
                "src/components/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@scss/*": [
                "./src/assets/scss/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        ".storybook/storyBookTheming.tsx"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts",
        "build"
    ]
}